{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@content/*": ["src/content/docs/*"],
      "@hooks/*": ["src/hooks/*"],
      "@i18n/*": ["src/i18n/*"],
      "@ios-fragments/*": [
        "src/code-snippets/ios/*"
      ],
      "@unity-fragments/*": [
        "src/code-snippets/unity/*"
      ]
    }
  }
}
