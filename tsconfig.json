{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@content/*": ["src/content/docs/*"]
    }
  }
}
