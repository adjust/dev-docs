---
import { extractListItems } from "@components/utils/extractListItems";

const content = Astro.slots.has("default")
  ? await Astro.slots.render("default")
  : "";

const lists = await extractListItems(content);
---

<div class="col-group grid grid-flow-row lg:grid-flow-col gap-6">
  {
    lists.map((list) => (
      <div class="column">
        <Fragment set:html={list} />
      </div>
    ))
  }
</div>
