---
import BuildAccordion from "@components/atlas/BuildAccordion";

interface Props {
  title: string;
  badge?: string;
}

const { title, badge } = Astro.props;
---

<BuildAccordion
  client:only="react"
  data={[
    {
      id: "",
      title: title,
      ...(badge && { badge: { label: badge, color: "neutral" } }),
    },
  ]}
>
  <slot slot="content" />
</BuildAccordion>
