---
import BuildAccordion from "@components/atlas/BuildAccordion";
import type { AccordionItem } from "@adjust/components/build/Accordion/Item";

interface Props {
  title: string;
  badge?: string;
}

const { title, badge } = Astro.props as Props;

// Create an accordion item with an optional badge
const accordionItems: AccordionItem[] = [
  {
    id: "",
    title,
    ...(badge && { badge: { label: badge, color: "neutral" } }),
  },
];
---

<BuildAccordion client:only="react" data={accordionItems}>
  <slot slot="content" />
</BuildAccordion>
