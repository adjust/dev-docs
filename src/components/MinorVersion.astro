---
import { Badge as AtlasBadge, type IconName } from "@adjust/components";
import { type Locales } from "@i18n/locales";
import { useTranslations } from "@i18n/utils";

const { lang } = Astro.params;
const t = useTranslations(lang as keyof Locales);

interface Props {
  added?: string;
  changed?: string;
  removed?: string;
  size?: "small" | "medium" | "large";
}

const { added, changed, removed, size } = Astro.props;

let badgeIcon: IconName = "Info";
let version: string | undefined;
let color: BadgeColor = "neutral";

if (added) {
  version = t("minorversion.added").replace("${version}", added);
  badgeIcon = "Check";
  color = "positive";
} else if (changed) {
  version = t("minorversion.changed").replace("${version}", changed);
  badgeIcon = "Negative";
  color = "warning";
} else if (removed) {
  version = t("minorversion.removed").replace("${version}", removed);
  badgeIcon = "Cross";
  color = "negative";
}

let content = "";
if (Astro.slots.has("default")) {
  content = await Astro.slots.render("default");
}
---

<AtlasBadge
  client:only="react"
  color={color}
  iconName={badgeIcon}
  label={version}
  css={{ marginBottom: "1rem" }}
  allowFullWidth
  size={size && size}
/>
<Fragment set:html={content} />
