---
import BuildTable from "@components/atlas/BuildTable";
const { lang } = Astro.params;

interface columnWidths {
  [key: number]: number;
}

export interface Props {
  search?: boolean;
  resizable?: number[];
  noborder?: boolean;
  striped?: boolean;
  height?: TableHeights;
  autoWidth?: number[];
  width?: columnWidths[];
}

const {
  search = false,
  resizable,
  noborder = false,
  striped = false,
  height = undefined,
  autoWidth,
  width,
} = Astro.props as Props;

// Check to see if the height passed is a real number.
// If it is, this needs to be passed as a number. If not, it should be passed as-is.

let heightNumber = isNaN(Number(height));
---

<BuildTable
  client:only="react"
  resizable={resizable}
  bordered={!noborder}
  search={search}
  striped={striped}
  height={!heightNumber ? Number(height) : height}
  lang={lang ? lang : "en"}
  autoWidth={autoWidth}
  width={width}
>
  <slot slot="content" />
</BuildTable>
