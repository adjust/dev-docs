---
import BuildMarkdownTable from "@components/atlas/BuildMarkdownTable.tsx";

export interface Props {
  search: boolean;
  resizable: boolean;
  noborder: boolean;
  noflex: boolean;
  striped: boolean;
}

const {
  search = false,
  resizable = false,
  noborder = false,
  noflex = false,
  striped = false,
} = Astro.props as Props;

// Store the content contained within the Accordion as a string.
// This string is converted to HTML inside the atlas/BuildAccordion.jsx file.

let content = "";

if (Astro.slots.has("default")) {
  content = await Astro.slots.render("default");
}
---

<BuildMarkdownTable
  client:only="react"
  resizable={resizable}
  bordered={!noborder}
  search={search}
  flex={!noflex && !resizable}
  striped={striped}
  content={content}
/>
