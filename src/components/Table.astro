---
import BuildTable from "@components/atlas/BuildTable";

export interface Props {
  search: boolean;
  resizable: boolean;
  noborder: boolean;
  noflex: boolean;
  striped: boolean;
  height?: number | "full-height" | undefined;
  list: boolean;
}

const {
  search = false,
  resizable = false,
  noborder = false,
  noflex = false,
  striped = false,
  height = undefined,
  list = false
} = Astro.props as Props;

// Store the content contained within the Accordion as a string.
// This string is converted to HTML inside the atlas/BuildAccordion.jsx file.

let content = "";

if (Astro.slots.has("default")) {
  content = await Astro.slots.render("default");
}
---

<BuildTable
  client:only="react"
  resizable={resizable}
  bordered={!noborder}
  search={search}
  flex={!noflex && !resizable}
  striped={striped}
  height={height ? Number(height) : "full-height"}
  list={list}
>
  <Fragment set:html={content} slot="content" />
</BuildTable>
