---
import { Icon } from "@adjust/components";

import { getLanguageFromURL } from "@i18n/locales";
import AudienceDropdown from "../AudienceDropdown";
import { HELP_CENTER_LINK } from "src/consts";

const currentLang = getLanguageFromURL(Astro.url.pathname);
const homeUrl = `${Astro.url.origin}/${currentLang}`;
---

<header class="flex justify-between items-center px-8 pt-8 bg-white">
  <div class="flex flex-row gap-x-[14px]">
    <a href={homeUrl} class="self-center">
      <img src="/images/Adjust-icon.svg" alt="adjust-icon" />
    </a>
    <AudienceDropdown client:only="react" />
  </div>
  <div class="flex gap-x-10">
    <a class="font-medium hover:text-link-active" href={HELP_CENTER_LINK}
      >Help Center</a
    >
    <a href="https://suite.adjust.com/login">
      <span class="mr-2 font-medium hover:text-link-active"
        >Adjust Dashboard</span
      >
      <Icon name="ArrowRight" client:only="react" />
    </a>
  </div>
</header>
