---
import { type CollectionEntry } from "astro:content";
import MainLayout from "./../../layouts/MainLayout.astro";
import { localizedDocs } from "@utils/helpers/navigation/getLocalizedDocs";

export async function getStaticPaths() {
  return localizedDocs.map((doc) => ({
    params: {
      // The slug always starts with the lang as a two character string
      lang: doc.slug.substring(0, 2),
      slug: doc.slug.substring(3),
    },
    props: doc,
  }));
}

type Props = CollectionEntry<"docs">;

const post = Astro.props;

const { Content, headings } = await post.render();
---

<MainLayout headings={headings} {...post.data}>
  <Content />
</MainLayout>
