<script is:inline>
  const KNOWN_LANGUAGE_CODES = new Set(["en", "zh", "ja", "ko"]);
  const userLang = navigator.languages?.[0] || navigator.language;
  const userLangFixed = userLang.slice(0, 2);
  window.location.pathname = KNOWN_LANGUAGE_CODES.has(userLangFixed)
    ? `/${userLangFixed}`
    : "/en";
</script>
